#!/usr/bin/env php
<?php

require __DIR__.'/../vendor/autoload.php';

use Culinaire\Command;
use Symfony\Component\Console\Application;

$application = new Application('Culinaire', '@package_version@');
$application->add(new Command\HelloCommand());
$application->add(new Command\SelfUpdateCommand());
$application->add(new Command\ValidateCommand());
$application->run();